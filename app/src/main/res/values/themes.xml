<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ActionBar -->
    <style name="Base.Theme.Bermuda" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="actionBarStyle">@style/TransparentActionBar</item>
    </style>
    <style name="Alt.Theme.Bermuda" parent="Theme.MaterialComponents.DayNight">
        <item name="actionBarStyle">@style/NormalActionBar</item>
        <item name="android:windowIsTranslucent"></item>
    </style>
    <style name="TransparentActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="displayOptions">showHome</item>
    </style>

    <style name="NormalActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="background">@color/blue_200</item>
        <item name="android:elevation">0dp</item>
        <item name="displayOptions">showHome</item>
    </style>

    <!-- No ActionBar -->
    <style name="Theme.Bermuda.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar" />
    <style name="Theme.Bermuda" parent="Base.Theme.Bermuda"/>

    <style name="ThemeOverlay.Bermuda.BottomSheet"
        parent="ThemeOverlay.Material3.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/Widget.Bermuda.BottomSheet</item>

    </style>

    <style name="Widget.Bermuda.BottomSheet"
        parent="Widget.Material3.BottomSheet.Modal">

        <item name="shapeAppearance">@style/ShapeAppearance.Bermuda.BottomSheet</item>
        <item name="backgroundTint">@android:color/transparent</item>

    </style>

    <style name="ShapeAppearance.Bermuda.BottomSheet"
        parent="ShapeAppearance.Material3.LargeComponent">

        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>

    </style>
</resources>